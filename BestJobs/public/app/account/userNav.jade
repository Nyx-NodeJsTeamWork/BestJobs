ul.nav.navbar-nav.navbar-right(ng-controller="NavCtrl" ng-show="identity.isAuthenticated()")
    li(ng-show="identity.isAuthenticated()")
        a(href="#/inbox")
            span.fa.fa-envelope
            |  Inbox
    li.dropdown(ng-show="identity.isAuthenticated()")
        a.dropdown-toggle(href="", data-toggle="dropdown")
            span.fa.fa-user
            | {{ ' ' + identity.currentUser.username + ' ' }}
            span.caret
        ul.dropdown-menu
            li(ng-show="identity.currentUser.isAdmin()")
                a(href="#/admin/users")
                    span.fa.fa-fw.fa-gear
                    | Administration
            li(ng-show="identity.isAuthenticated()")
                a(href="#/profile")
                    span.fa.fa-fw.fa-user
                    | Profile
            li
                a(href="#" ng-click="logout()")
                    span.fa.fa-fw.fa-power-off
                    | Sign Out